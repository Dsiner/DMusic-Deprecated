<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:scaleType="centerInside"
        android:src="@drawable/notification_icon" />

    <LinearLayout
        android:id="@+id/action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" >

        <ImageView
            android:id="@+id/iv_previous"
            android:layout_width="36dp"
            android:layout_height="64dp"
            android:src="@drawable/notification_prev" />

        <ImageView
            android:id="@+id/iv_pause"
            android:layout_width="36dp"
            android:layout_height="64dp"
            android:src="@drawable/notification_play" />

        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="36dp"
            android:layout_height="64dp"
            android:src="@drawable/notification_next" />

        <ImageView
            android:id="@+id/iv_quit"
            android:layout_width="30dp"
            android:layout_height="64dp"
            android:src="@drawable/notification_quit" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/action"
        android:layout_toRightOf="@+id/image" >

        <TextView
            android:id="@+id/title"
            style="@style/TTNotificationTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="none"
            android:fadingEdge="horizontal"
            android:fadingEdgeLength="8dp"
            android:singleLine="true"
            android:text="FireFly" />

        <TextView
            android:id="@+id/text"
            style="@style/TTNotificationText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:ellipsize="none"
            android:fadingEdge="horizontal"
            android:fadingEdgeLength="8dp"
            android:singleLine="true"
            android:text="Shawn McDonald" />
    </RelativeLayout>

</RelativeLayout>